generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Type {
  APARTMENT
  HOUSE
}

model Apartment {
  id               String   @id @default(uuid())
  type             Type     @default(APARTMENT)
  price            Float
  address          String
  isPetFriendly    Boolean
  isSharedRoom     Boolean
  isSharedBathroom Boolean
  isSharedKitchen  Boolean
  lat              Float
  lng              Float
  rate             Float    @default(0)
  lessor           Lessor   @relation(fields: [lessorId], references: [id])
  lessorId         String
  tenants          Tenant[]
  images           Image[]
  shortDescription String   @default("")
  longDescription  String   @default("")
}

model Tenant {
  id          String    @id @default(uuid())
  name        String
  email       String    @unique
  password    String
  phone       BigInt
  apartment   Apartment @relation(fields: [apartmentId], references: [id])
  apartmentId String
}

model Lessor {
  id         String      @id @default(uuid())
  name       String
  email      String      @unique
  phone      BigInt
  apartments Apartment[]
}

model Image {
  id          String    @id @default(uuid())
  url         String
  apartment   Apartment @relation(fields: [apartmentId], references: [id])
  apartmentId String
}
